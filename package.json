{
	"name": "parasail-language-server",
	"description": "Language Server for the ParaSail language.",
	"version": "1.0.0",
	"author": "Olivier Henley",
	"license": "MIT",
	"engines": {
		"node": "*"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/parasail-lang/parasail-ls"
	},
	"dependencies": {
		"@types/vscode": "^1.97.0",
		"typescript": "^4.9.5",
		"vscode": "^1.1.37",
		"vscode-languageclient": "^9.0.1",
		"vscode-languageserver": "^8.1.0",
		"vscode-languageserver-textdocument": "^1.0.8"
	},
	"scripts": {
		"build": "npm install && npx tsc",
		"compile": "npx tsc",
		"watch": "npx tsc --watch"
	},
	"devDependencies": {
		"@types/node": "^20.11.19"
	},
	"contributes": {
		"languages": [
			{
				"id": "parasail",
				"aliases": [
					"ParaSail",
					"parasail"
				],
				"extensions": [
					".psi"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "parasail",
				"scopeName": "source.parasail",
				"path": "./syntaxes/parasail.tmLanguage.json"
			}
		]
	}
}
